<% content_for :dashboard_content do %>

  <div class="settings-container container">
    <div class="row">
      <div class="settings-sidebar col-md-2">
        <ul class="sidebar-nav">
          <% if current_user.admin? %>
            <li class="<%= current_page?(settings_admin_path) ? 'active' : '' %>">
              <%= link_to 'Admin', settings_admin_path %>
            </li>
          <% end %>
          <li class="<%= current_page?(settings_account_path) ? 'active' : '' %>">
            <%= link_to 'Settings', settings_account_path %>
          </li>
        </ul>
      </div>
      <div class="settings-content-wrapper col-md-10">
        <div class="settings-content"><%= yield :settings_content %></div>
      </div>
    </div>
  </div>

<% end %>
<%= render template: "layouts/dashboard" %>
